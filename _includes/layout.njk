<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
  {% include "meta-tags.njk" %}
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Merriweather:ital,wght@0,400;0,700;1,400&family=Roboto+Slab:wght@400;700&display=swap" rel="stylesheet">
  <script src="https://cdn.tailwindcss.com/3.4.1?plugins=typography"></script>
  <script type="text/javascript" src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
  <script>
    tailwind.config = {
      theme: { extend: { fontFamily: { sans: ['Merriweather', 'serif'], serif: ['Roboto Slab', 'serif'] } } },
      darkMode: 'class'
    }
  </script>
  <style>
    body { font-family: 'Merriweather', serif; }
    h1, h2, h3, h4, h5, h6 { font-family: 'Roboto Slab', serif; }
    .site-title { font-family: 'Roboto Slab', serif; font-size: 2.25rem; font-weight: 700; }
  </style>
  <link rel="icon" href="/assets/favicon.ico">
</head>
<body class="bg-white text-gray-900 dark:bg-black dark:text-gray-100">

  <header class="bg-white/95 dark:bg-black/95 backdrop-blur-sm sticky top-0 z-50 border-b border-gray-200 dark:border-gray-800">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between py-4">
        <a href="/" class="flex items-center gap-3"><img src="/assets/argosy-logo.png" alt="The Argosy logo" class="h-9 md:h-10" /><span class="site-title">The Argosy</span></a>
        <nav class="hidden md:flex items-center gap-6 text-sm font-semibold">
          <div class="relative" id="categories-dropdown">
            <button id="categories-btn" class="flex items-center gap-1 hover:text-blue-600">
              <span>Categories</span>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 transition-transform" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" /></svg>
            </button>
            <div id="categories-menu" class="hidden absolute left-0 mt-2 w-56 bg-white dark:bg-gray-900 shadow-lg ring-1 ring-black ring-opacity-5 z-20">
              <div class="grid grid-cols-2 gap-1 p-2">
                <a href="/category/politics/" class="block px-3 py-2 hover:bg-gray-100 dark:hover:bg-gray-800">Politics</a>
                <a href="/category/health/" class="block px-3 py-2 hover:bg-gray-100 dark:hover:bg-gray-800">Health</a>
              </div>
            </div>
          </div>
          <a href="/team/" class="hover:text-blue-600">Team</a>
          <a href="/about/" class="hover:text-blue-600">About</a>
          <a href="/recruit/" class="hover:text-blue-600">Join</a>
        </nav>
        <div class="hidden md:flex items-center gap-4">
          <div data-netlify-identity-menu></div>
          <button id="themeToggle" class="px-2.5 py-2 text-sm border border-gray-300 dark:border-gray-700">ðŸŒ™</button>
        </div>
        <button id="menuBtn" class="md:hidden p-2"><svg class="h-6 w-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M4 6h16M4 12h16M4 18h16"/></svg></button>
      </div>
    </div>
  </header>

  <main id="content">{{ content | safe }}</main>

  <footer class="bg-gray-900 text-gray-300 mt-16">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-12">
      <div class="mt-12 border-t border-gray-800 pt-8 text-center">
        <p class="text-sm">&copy; 2025 Herbart Kita Publishing. All rights reserved.</p>
      </div>
    </div>
  </footer>

  <script>
    // Theme Toggle Script
    const themeBtn = document.getElementById('themeToggle');
    const root = document.documentElement;
    if (localStorage.getItem('theme') === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
      root.classList.add('dark');
    }
    themeBtn?.addEventListener('click', () => {
      root.classList.toggle('dark');
      localStorage.setItem('theme', root.classList.contains('dark') ? 'dark' : 'light');
    });

    // Netlify Identity Script
    if (window.netlifyIdentity) {
      window.netlifyIdentity.on("init", user => {
        if (!user) {
          window.netlifyIdentity.on("login", () => {
            document.location.href = "/admin/";
          });
        }
      });
    }
  </script>
</body>
</html>
